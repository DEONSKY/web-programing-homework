@model WebApplication2.Models.ProductSeries

@{
    ViewData["Title"] = "Create";
}

<h1>Create products serie</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Product Name</label>
                <select class="form-control" asp-items="ViewBag.ProductId" name="ProductId"></select>
            </div>
            <div class="form-group">
                <label  class="control-label">Seller Name</label>
                <select class="form-control" asp-items="ViewBag.SellerId" name="SellerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="quantity" class="control-label"></label>
                <input asp-for="quantity" type="number" min="1" class="form-control" />
                <span asp-validation-for="quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" type="number" min="0" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cost" class="control-label"></label>
                <input asp-for="cost" type="number" class="form-control" />
                <span asp-validation-for="cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="buyTime" class="control-label">Buy Time</label>
                <input asp-for="buyTime" class="form-control" />
                <span asp-validation-for="buyTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="link-secondary">Back to List</a>
                <input type="submit" value="Create" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>
