@model IEnumerable<WebApplication2.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <div class="container">
        <div class="row">
        
       @foreach (var item in Model) {

        <div class="col-md-6 col-12">
            <div class="border border-secondary border- rounded-lg m-2 p-2">
                <div class="row">
                    <div class="col">
                        @Html.DisplayFor(modelItem => item.name)
                    </div>
                    <div class="col">
                        @Html.DisplayFor(modelItem => item.weight)
                    </div>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@item.barcode">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.barcode">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.barcode">Delete</a>
                </div>
                <div>
                    <image class="img-fluid" src="@item.imagePath" />
                </div>
            </div>
        </div>

        }
        </div>
    </div>
</table>
