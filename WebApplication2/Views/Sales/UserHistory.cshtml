@model IEnumerable<WebApplication2.Models.Sale>

@{
    ViewData["Title"] = "View";
}

<h1>Shopping History</h1>

<div class="table">
    <div class="table">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-12">
                        <div class=" m-1 row overflow-hidden bg-light p-2">
                            <h2 class="mx-auto">
                                @Html.DisplayFor(modelItem => item.productSeries.product.name)
                            </h2>
                            <div class="row">
                                <div class="col-6">
                                    <image class="img-fluid rounded" src="@Html.DisplayFor(modelItem =>item.productSeries.product.imagePath)" />
                                </div>
                                <div class="col-6 justify-content-between my-auto">
                                    <div class="row ">
                                        <div class="mx-auto">
                                            <div class="font-weight-bold text-center mb-1">
                                                @Html.DisplayFor(modelItem => item.productSeries.price)
                                            </div>
                                            <div class="font-weight-bold text-center mb-1">
                                                @Html.DisplayFor(modelItem => item.quantity)
                                            </div>
                                            <div class="font-weight-bold text-center mb-1">
                                                @Html.DisplayFor(modelItem => item.productSeries.seller.name)
                                            </div>
                                            <div class="font-weight-bold text-center mb-1">
                                                @Html.DisplayFor(modelItem => item.dateTime.DateTime)
                                            </div>
          
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    
</div>
