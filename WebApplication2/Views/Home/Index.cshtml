@model IEnumerable<WebApplication2.Models.ProductSeries>

@{
    ViewData["Title"] = "Index";
}

<h1>Market</h1>

<table class="table">
    <div class="container">
        <div class="row">

            @foreach (var item in Model)
            {

                <div class="col-md-6 col-12">
                    <div class=" m-1 row overflow-hidden bg-light p-2">
                        <div class="row">
                            <div class="col-6">
                                <image class="img-fluid" src="@item.product.imagePath" />
                            </div>
                            <div class="col-6 justify-content-between">
                                <div class="row ">
                                    <div class="mx-auto">
                                        <div class="font-weight-bold text-center">
                                            @Html.DisplayFor(modelItem => item.product.name)
                                        </div>
                                        <div class="font-weight-bold text-center">
                                            @Html.DisplayFor(modelItem => item.product.weight) kg
                                        </div>
                                        <div class="font-weight-bold text-center">
                                            @Html.DisplayFor(modelItem => item.seller.name)
                                        </div>
                                        <div class="font-weight-bold text-center">
                                            @Html.DisplayFor(modelItem => item.price)
                                        </div>
                                        <div class="font-weight-bold text-center">
                                            @Html.DisplayFor(modelItem => item.quantity)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="mx-auto d-inline mt-3">

                                        <a role="button" class="btn btn-info mr-1" asp-action="Buy" asp-route-id="@item.id">Buy</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</table>

    