@model WebApplication2.Models.Sale
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
 
@{
    ViewData["Title"] = "Buy";
}

<h1>@localizer["Buy"]</h1>

<h4>Sale</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-6 col-12">
            <div class=" m-1 row overflow-hidden bg-light p-2">
                <div class="row">
                    <div class="col-6">
                        <image class="img-fluid" src="@ViewBag.productSeries.product.imagePath" />
                    </div>
                    <div class="col-6 justify-content-between">
                        <div class="row ">
                            <div class="mx-auto">
                                <div class="font-weight-bold text-center">
                                    @ViewBag.productSeries.product.name
                                </div>
                                <div class="font-weight-bold text-center">
                                    @ViewBag.productSeries.product.weight kg
                                </div>
                                <div class="font-weight-bold text-center">
                                    @ViewBag.productSeries.seller.name
                                </div>
                                <div class="font-weight-bold text-center">
                                    @ViewBag.productSeries.price
                                </div>
                                <div class="font-weight-bold text-center">
                                    @ViewBag.productSeries.quantity
                                </div>
                                <div class="font-weight-bold text-center">
                                    @ViewBag.productSeries.product.description
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Buy">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="ProductId" value="@ViewBag.productSeries.id" />
            <div class="form-group">
                <label asp-for="quantity" class="control-label"></label>
                <input asp-for="quantity" class="form-control" min="1" max="@ViewBag.productSeries.quantity" />
                <span asp-validation-for="quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buy" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

